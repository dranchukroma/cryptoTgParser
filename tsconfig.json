{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
    },
    "include": [
        "src/**/*"
    ]
}